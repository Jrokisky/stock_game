<!DOCTYPE html>
<head>
	<title>CAPITAL GAINS</title>
	<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
	<script src="{{ url_for('static', filename='chart.js') }}"></script>
</head>
<body>
	<div class="chart-container">
		<canvas id="chart-canvas" width="600" height="600"></canvas>
	</div>
	<div>
		<span>Volatility:</span>
		<input type="text" name="volatility-in" id="volatility-in" value="0.25"> 
		<select name="vol-fn-in" id="vol-fn-in"> 
            <option value="quadratic">Quadratic</option>
            <option value="linear">Linear</option>
            <option value="constant">Constant</option>
        </select>
        <br>
		<span>Trend:</span>
		<input type="text" name="trend-in" id="trend-in" value="0.02"> 
		<select name="trend-fn-in" id="trend-fn-in"> 
            <option value="quadratic">Quadratic</option>
            <option value="linear">Linear</option>
            <option value="constant">Constant</option>
        </select>
        <br>
		<button type="button" id="gen-button">Generate</button>
	</div>
</body>
